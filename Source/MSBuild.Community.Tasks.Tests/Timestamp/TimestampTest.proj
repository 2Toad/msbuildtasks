<Project InitialTargets="buildinfo" DefaultTargets="test" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup>
		<MSBuildCommunityTasksPath Condition="'$(MSBuildCommunityTasksPath)' == ''">$(MSBuildExtensionsPath)/MSBuildCommunityTasks</MSBuildCommunityTasksPath>
	</PropertyGroup>

	<Import Project="$(MSBuildCommunityTasksPath)/MSBuild.Community.Tasks.Targets" />

	<Target Name="buildinfo">
		<Message Text="MSBuildProjectFullPath: $(MSBuildProjectFullPath)" />
		<Message Text="MSBuildBinPath: $(MSBuildBinPath)" />
		<Message Text="MSBuildExtensionsPath: $(MSBuildExtensionsPath)" />

		<Timestamp Format="yyyy/MM/dd HH:mm:ss" >
			<Output TaskParameter="LocalTimestamp" PropertyName="BuildDate" />
		</Timestamp>
		<Message Text="Build date: $(BuildDate)" />
	</Target>

	<Target Name="test">
		<Message Text="Build date: $(BuildDate)" />

		<Timestamp Format="yyyy MMM dd HH:mm" >
			<Output TaskParameter="LocalTimestamp" PropertyName="LocalTime" />
			<Output TaskParameter="UniversalTimestamp" PropertyName="UTCTime" />
		</Timestamp>

		<Message Text="Timestamp: $(LocalTime) (local)" />
		<Message Text="Timestamp: $(UTCTime) (UTC)" />
	</Target>

</Project>